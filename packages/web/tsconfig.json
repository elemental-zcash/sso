{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "#components/*": ["../components/*"],
      "#components": ["../components/"],
      "elemental-color/*": ["./node_modules/elemental-color/*"],
    }
  },
  "exclude": ["node_modules", "stories"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "stories/components/getting-started.mdx"]
}
